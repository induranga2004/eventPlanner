# OpenAI API Key
# Get your key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Connection (REQUIRED for provider fetching)
# Format: mongodb://username:password@host:port/database
# Example: mongodb://localhost:27017/eventplanner
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=mongodb://localhost:27017/eventplanner

# Serper API Key (for web searches in CrewAI)
# Get your key from https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# Cloudinary Configuration (for AI Visual Composer)
CLOUDINARY_CLOUD_NAME=your_name
CLOUDINARY_API_KEY=...
CLOUDINARY_API_SECRET=...

# AI Configuration
AI_ENABLE_FLUX=true   # Enable AI image generation
AI_ENABLE_CREWAI=true  # prompt shaping via crewai agent

# Hugging Face Token for FLUX models
HF_TOKEN=your_hugging_face_token_here

# AI Model Parameters (for accuracy tuning)
ACCURACY_PRESET=development  # development, production, high_quality
BG_GUIDANCE_SCALE=3.5
BG_INFERENCE_STEPS=28
HARM_STRENGTH=0.45
HARM_GUIDANCE_SCALE=4.0
HARM_INFERENCE_STEPS=28

# Prompt Enhancement
USE_ENHANCED_PROMPTS=true
INCLUDE_TECHNICAL_TERMS=true
ADD_QUALITY_MODIFIERS=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175
