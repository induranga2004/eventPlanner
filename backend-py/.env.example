# Core planner configuration
PLANNER_API_KEY=planner-dev-key                    # Required once API-key guard is enforced
# or
# PLANNER_API_KEYS=planner-dev-key,partner-integration

# Database (optional today, required once context persistence ships)
MONGO_URI=mongodb://localhost:27017/eventplanner
MONGO_DB_NAME=eventplanner
MONGO_CONCEPTS_COLLECTION=concepts

# Concept source toggles
USE_AI_CONCEPTS=0                                   # 0 = use bundled CSV, 1 = call OpenAI agent
DEFAULT_CONCEPT_CITY=Colombo

# AI services
OPENAI_API_KEY=your_openai_api_key_here             # Required for narrative + harmonisation prompts
AI_ENABLE_FLUX=true                                 # Enable FLUX background generation
HF_TOKEN=your_hugging_face_token_here               # Hugging Face access token

# Poster export storage (optional in dev)
CLOUDINARY_CLOUD_NAME=your_cloud
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Optional search enrichment for planner agents
SERPER_API_KEY=

# Prompt & quality tuning
ACCURACY_PRESET=development                          # development | production | high_quality
BG_GUIDANCE_SCALE=3.5
BG_INFERENCE_STEPS=28
HARM_STRENGTH=0.45
HARM_GUIDANCE_SCALE=4.0
HARM_INFERENCE_STEPS=28
USE_ENHANCED_PROMPTS=true
INCLUDE_TECHNICAL_TERMS=true
ADD_QUALITY_MODIFIERS=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175
